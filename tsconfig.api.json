{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "dist/api",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@type/*": ["src/types/*"],
      "@lib/*": ["src/lib/*"],
      "@api/*": ["api/*"]
    }
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules"]
}