{
  "name": "better-chatgpt",
  "private": true,
  "version": "1.0.4",
  "type": "module",
  "homepage": "./",
  "main": "electron/index.cjs",
  "author": "Jing Hua <betterchatgpt@mail.tjh.sg>",
  "description": "Play and chat smarter with BetterChatGPT - an amazing open-source web app with a better UI for exploring OpenAI's ChatGPT API!",
  "scripts": {
    "proxy": "node scripts/server.js",
    "dev:host": "vite --host --force",
    "build": "NODE_ENV=production TS_NODE_BASEURL=./ pnpm build:vite",
    "build:vite": "NODE_OPTIONS='--max_old_space_size=2192' vite build",
    "dead": "pnpm build && node scripts/analyze-maps.js",
    "sentry:upload": "node scripts/upload-to-sentry.js",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest watch",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "type:check": "tsc --noEmit",
    "type:check:tests": "tsc --noEmit -p tsconfig.test.json",
    "type:check:node": "tsc --noEmit -p tsconfig.node.json",
    "type:check:all": "pnpm type:check && pnpm type:check:tests && pnpm type:check:node",
    "type:watch": "tsc --noEmit --watch",
    "deps:check": "depcheck",
    "lint:js": "eslint --ext .ts,.tsx,.js,.jsx .",
    "lint:js:fix": "eslint --ext .ts,.tsx,.js,.jsx . --fix",
    "lint:deadcode": "ts-prune -i '(test|gatsby)' | grep -v cssExports | grep -v 'used in module'",
    "lint:styles": "stylelint src/**/*.{js,jsx,ts,tsx,css}",
    "lint:styles:fix": "stylelint src/**/*.{js,jsx,ts,tsx,css} --fix",
    "lint:format": "prettier --check '**/*.{js,jsx,ts,tsx,css}'",
    "lint:format:fix": "prettier '**/*.{js,jsx,ts,tsx,css}' --write",
    "lint:js:tests": "eslint --config .eslintrc.test.json \"**/*.test.{ts,tsx}\" \"!**/!(*!vitest!setup!)*!\"",
    "lint:all": "NODE_ENV=test pnpm lint:js && pnpm lint:js:tests && pnpm lint:styles && pnpm lint:format && pnpm lint:deadcode",
    "lint:fix:all": "NODE_ENV=test pnpm lint:js:fix && pnpm lint:styles:fix && pnpm lint:format:fix",
    "format": "pnpm lint:format:fix",
    "validate": "pnpm type:check:all && pnpm lint:all",
    "precommit": "pnpm lint-staged",
    "vercel-build": "pnpm build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:analyze": "node scripts/analyze-test-failures.js"
  },
  "build": {
    "appId": "better-chatgpt",
    "productName": "Better ChatGPT",
    "artifactName": "${os}-${name}-${version}-${arch}.${ext}",
    "directories": {
      "output": "release"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "dist/icon-rounded.png"
    },
    "linux": {
      "target": [
        "tar.gz",
        "AppImage"
      ],
      "category": "Chat",
      "icon": "dist/icon-rounded.png"
    },
    "win": {
      "target": "NSIS",
      "icon": "dist/icon-rounded.png"
    }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.38.0",
    "@dqbd/tiktoken": "^1.0.2",
    "@sentry/react": "^9.15.0",
    "@sentry/vite-plugin": "^3.4.0",
    "@types/react-beautiful-dnd": "^13.1.8",
    "express": "^5.1.0",
    "highlight.js": "^11.11.1",
    "html2canvas": "^1.4.1",
    "i18next": "^22.4.11",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-http-backend": "^2.1.1",
    "jspdf": "^2.5.1",
    "katex": "^0.16.4",
    "lodash": "^4.17.21",
    "lz-string": "^1.5.0",
    "match-sorter": "^6.3.1",
    "mermaid": "^11.4.1",
    "minimatch": "^5.1.0",
    "next": "^15.3.0",
    "openai": "^4.73.0",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^12.2.0",
    "react-markdown": "^8.0.5",
    "rehype-highlight": "^6.0.0",
    "rehype-katex": "^6.0.2",
    "remark-gfm": "^3.0.1",
    "remark-math": "^5.1.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.0",
    "zustand": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@tailwindcss/typography": "^0.5.9",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/lodash": "^4.14.192",
    "@types/next": "^9.0.0",
    "@types/node": "^22.14.0",
    "@types/papaparse": "^5.3.7",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/react-scroll-to-bottom": "^4.2.0",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "@vitest/browser": "^3.0.7",
    "@vitest/coverage-v8": "^3.0.6",
    "autoprefixer": "^10.4.13",
    "backstopjs": "^6.3.2",
    "depcheck": "^1.4.7",
    "esbuild": "0.25",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.8.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jsdom": "^26.0.0",
    "markdownlint-cli2": "^0.12.1",
    "msw": "^1.3.5",
    "prettier": "^3.2.4",
    "puppeteer": "^22.0.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.2.7",
    "terser": "^5.39.0",
    "ts-prune": "^0.10.3",
    "typescript": "^5.8.3",
    "vite": "^4.1.0",
    "vite-plugin-top-level-await": "^1.3.0",
    "vite-plugin-wasm": "^3.2.2",
    "vitest": "^3.1.1"
  },
  "packageManager": "pnpm@10.4.1+sha512.c753b6c3ad7afa13af388fa6d808035a008e30ea9993f58c6663e2bc5ff21679aa834db094987129aa4d488b86df57f7b634981b2f827cdcacc698cc0cfb88af"
}
